<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.darly.dlvideo.widget.smoth.SmoothImageView
        android:id="@+id/info_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/action_settings"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mediacontroller_bg_pressed"
            android:textSize="@dimen/text_size_biger"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mediacontroller_bg"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</LinearLayout>