<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.darly.dlvideo.widget.bubble.BubbleTextVew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/VideoView_error_button"
        android:textColor="@android:color/white"
        app:arrowHeight="10dp"
        app:arrowLocation="bottom"
        app:arrowWidth="20dp"
        app:bubbleColor="@color/bg_bottom_tip"
        app:pathBorder="5dp"
        app:pathColor="@color/abc_search_url_text_normal" />

    <com.darly.dlvideo.widget.bubbleborder.BubbleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:darly_arrowDirection="Down"
        app:darly_cornerRadius="4dp" />

    <com.darly.dlvideo.widget.bubbleborder.BubbleTextView
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="10dp"
        android:text="@string/action_settings"
        android:textColor="@android:color/white"
        app:darly_arrowDirection="Left"
        app:darly_arrowHeight="10dp"
        app:darly_arrowOffset="3dp"
        app:darly_arrowWidth="20dp"
        app:darly_borderColor="@color/yellow01"
        app:darly_borderWidth="6dp"
        app:darly_cornerRadius="4dp"
        app:darly_fillColor="@android:color/background_light"
        app:darly_fillPadding="2dp" />

</LinearLayout>